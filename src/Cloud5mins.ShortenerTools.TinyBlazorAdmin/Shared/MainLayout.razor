@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized >
                        Hello, @context.User.Identity?.Name! 
                        <a class="nav-link btn btn-link" href="/logout?post_logout_redirect_uri=/">Log out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="/login">Log in</a>
                </NotAuthorized>
            </AuthorizeView>
            
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
